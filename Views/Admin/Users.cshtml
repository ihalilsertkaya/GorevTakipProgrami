@{
    ViewData["Title"] = "Kullanıcılar";
}


<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Kullanıcılar</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-xs-12">
                        @if (ViewBag.SuccessMessage != null)
                        {
                            <div class="alert alert-success">@ViewBag.SuccessMessage</div>
                        }
                        else if (ViewBag.ErrorMessage != null)
                        {
                            <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
                        }
                        <div class="table-responsive">
                            <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap">
                                <thead>
                                <tr>
                                    <th class="text-center">İsim</th>
                                    <th class="text-center">Email</th>
                                    <th class="text-center">Rol</th>
                                    <th class="text-center">İşlemler</th>
                                </tr>
                                </thead>
                                <tbody>
                                @foreach (var user in Model)
                                {
                                    <tr>
                                        <td class="text-left">@user.FullName</td>
                                        <td>@user.Email</td>
                                        <td class="text-center">@user.Role</td>
                                        <td class="text-center">
                                            <form method="post">
                                                <button class="btn btn-warning" asp-action="ChangeRole" asp-route-userId="@user.UserId">
                                                    <i class="fa-lg fa @(user.Role == "Kullanici" ? "fa-shield" : "fa-user")"></i>
                                                </button>
                                                <button class="btn btn-danger m-l-10" asp-action="DeleteUser" asp-route-userId="@user.UserId">
                                                    <i class="fa-lg fa fa-remove"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>