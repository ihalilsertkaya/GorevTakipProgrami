@model PasswordResetViewModel
@{
    Layout = "_LoginLayout";
}
<h3 class="text-center m-t-0 m-b-30">
    <span class="">
        <img src="/assets/images/logo_dark.png" alt="logo" height="32">
    </span>
</h3>
<h4 class="text-muted text-center m-t-0">
    <b>Şifremi Unuttum</b>
</h4>

<form class="form-horizontal m-t-20" asp-action="ForgotPassword">
    @if (ViewBag.SuccessMessage != null)
    {
        <div class="alert alert-success" role="alert">
            <span>@ViewBag.SuccessMessage</span>
        </div>
    }
    else if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger" role="alert">
            @foreach (var key in ViewData.ModelState.Keys)
            {
                foreach (var error in ViewData.ModelState[key].Errors)
                {
                    <span>@error.ErrorMessage</span>
                    <br/>
                }
            }
        </div>
    }

    <div class="form-group">
        <div class="col-xs-12">
            <input class="form-control" name="email" type="email" required="" placeholder="ornek@mail.com">
        </div>
    </div>

    <div class="form-group text-center m-t-20">
        <div class="col-xs-12">
            <button class="btn btn-primary w-md waves-effect waves-light" type="submit">Gönder</button>
        </div>
    </div>
    <div class="col-xs-12">
        <a class="text-muted m-t-10" asp-action="Login"><i class="fa fa-arrow-left m-r-5"></i>Geri Dön</a>
    </div>

</form>